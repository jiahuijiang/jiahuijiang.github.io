---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p
      class="post-description"
      {% if page.time %}
        style="margin-bottom: 0.5rem;"
      {% endif %}
    >
      {{ page.description }}
    </p>
    {% if page.time %}
      <p class="post-meta" style="font-size: 0.9rem; color: #6c757d; margin-top: 0; margin-bottom: 1.5rem;">
        <i class="fa fa-clock-o" aria-hidden="true"></i> {{ page.time }}
      </p>
    {% endif %}
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      <!-- Bibliography removed -->
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
